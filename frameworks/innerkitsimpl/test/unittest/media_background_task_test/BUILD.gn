import("//build/test.gni")
import("//foundation/multimedia/media_library/media_library.gni")

group("unittest") {
  testonly = true
  deps = [ ":media_background_task_test" ]
}

ohos_unittest("media_background_task_test") {
  module_out_path = "media_library/media_library_asset"
  include_dirs = [
    "./include",
    "${MEDIALIB_NEW_SERVICES_PATH}/background_task_manager/include/background",
  ]

  sources = [ 
    "./src/media_clear_invalid_user_comment_task_test.cpp",
  ]
  deps = [
    "${MEDIALIB_INNERKITS_PATH}/medialibrary_data_extension:medialibrary_data_extension",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  resource_config_file = "${MEDIALIB_INNERKITS_PATH}/test/unittest/resources/ohos_test.xml"
}
