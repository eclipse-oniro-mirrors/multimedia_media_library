import("//build/test.gni")
import("//foundation/multimedia/media_library/media_library.gni")

group("unittest") {
  testonly = true

  deps = [ ":medialibrary_mimetype_test" ]
}

ohos_unittest("medialibrary_mimetype_test") {
  module_out_path = "media_library/media_library-asset"

  include_dirs = [
    "./include",
    "${MEDIALIB_INTERFACES_PATH}/inner_api/media_library_helper/include",
    "${MEDIALIB_INNERKITS_PATH}/media_library_helper/include",
    "${MEDIALIB_UTILS_PATH}/include",
  ]

  sources = [ "./src/medialibrary_mimetype_test.cpp" ]

  deps = [ "${MEDIALIB_INNERKITS_PATH}/media_library_helper:media_library" ]

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  external_deps = [
    "ability_base:zuri",
    "c_utils:utils",
    "hilog:libhilog",
    "image_framework:image_native",
    "json:nlohmann_json_static",
    "player_framework:media_client",
  ]
}
