import("//build/test.gni")
import("//foundation/multimedia/media_library/media_library.gni")

group("unittest") {
  testonly = true

  deps = [ ":medialibrary_thumbnail_service_test" ]
}

ohos_unittest("medialibrary_thumbnail_service_test") {
  module_out_path = "media_library/medialibraryextention"
  include_dirs = [ "./include" ]

  sources = [ "./src/medialibrary_thumbnail_service_test.cpp" ]
  deps = [
    "${MEDIALIB_INNERKITS_PATH}/medialibrary_data_extension:medialibrary_data_extension",
    "${MEDIALIB_SERVICES_PATH}/media_thumbnail:medialibrary_thumbnail",
  ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:ability_context_native",
    "ability_runtime:ability_manager",
    "ability_runtime:abilitykit_native",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "data_share:datashare_provider",
    "hilog_native:libhilog",
    "kv_store:distributeddata_inner",
    "relational_store:native_rdb",
  ]

  resource_config_file =
      "${MEDIALIB_INNERKITS_PATH}/test/unittest/resources/ohos_test.xml"
}
